{
  "name": "cli-app",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start.js": "npm run bundle && node dist/app.js",
    "start.ts": "ts-node src/app.ts",
    "start.bin": "npm run build && ./bin/app-win.exe",
    "build": "npm run bundle && npm run pkg",
    "bundle": "webpack --config webpack.prod.config.js",
    "pkg": "rm bin/* && pkg dist/app.js -o bin/app -t win,linux",
    "lint": "eslint src",
    "test": "mocha --watch-extensions ts --require espower-typescript/guess test/**/*.ts"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "devDependencies": {
    "@types/commander": "^2.12.2",
    "@types/marked": "^1.1.0",
    "@types/mocha": "^7.0.2",
    "@types/node": "^14.0.14",
    "@types/webpack": "^4.41.18",
    "@typescript-eslint/eslint-plugin": "^3.4.0",
    "@typescript-eslint/parser": "^3.4.0",
    "clean-webpack-plugin": "^3.0.0",
    "cross-env": "^7.0.2",
    "dotenv": "^8.2.0",
    "eslint": "7.2.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-import-resolver-webpack": "^0.12.2",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-import": "^2.21.2",
    "eslint-plugin-prettier": "^3.1.4",
    "espower-typescript": "^9.0.2",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "mocha": "^8.0.1",
    "nexe": "^3.3.7",
    "nps": "^5.9.12",
    "pkg": "^4.4.9",
    "power-assert": "^1.6.1",
    "prettier": "^2.0.5",
    "pretty-quick": "^2.0.1",
    "ts-loader": "^7.0.5",
    "ts-node": "^8.10.2",
    "ts-node-dev": "^1.0.0-pre.49",
    "typescript": "^3.9.5",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.12",
    "webpack-merge": "^4.2.2",
    "webpack-node-externals": "^1.7.2"
  },
  "dependencies": {
    "commander": "^5.1.0",
    "marked": "^1.1.0"
  }
}
